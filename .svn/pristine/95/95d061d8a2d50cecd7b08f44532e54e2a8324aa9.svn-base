                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="起保日期"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        />


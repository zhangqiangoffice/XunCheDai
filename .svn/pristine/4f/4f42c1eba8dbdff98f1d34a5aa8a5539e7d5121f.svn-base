<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mibai"
    >
    <include layout="@layout/activity_blue_title"/>
    <include
        android:id="@+id/layout_emptyview"
        layout="@layout/layout_emptyview"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/blue"
        >

           <TextView
               android:id="@+id/tv_user_name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="庄周"
               android:textColor="@color/white"
               android:textSize="16sp"
               android:gravity="center"
               />

        <TextView
            android:id="@+id/tv_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="五河督训区 | 督训长"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_number"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="团队人数 |"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/tv_team_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:padding="5dp"
                android:gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:padding="5dp"
                android:gravity="center_vertical"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_day"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="团队当日业绩 |"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/tv_day_yj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1200"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:padding="5dp"
                android:gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:padding="5dp"
                android:gravity="center_vertical"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_month"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="团队当月业绩 |"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/tv_month_yj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12000"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:padding="5dp"
                android:gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:padding="5dp"
                android:gravity="center_vertical"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_total"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="团队总业绩 |"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/tv_total_yj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120000"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:padding="5dp"
                android:gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:padding="5dp"
                android:gravity="center_vertical"
                />
        </LinearLayout>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >
           <com.minsheng.app.xunchedai.views.MyListView
               android:id="@+id/activity_team_lv"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:dividerHeight="10dp"
               android:divider="@color/mibai"
               android:layout_marginTop="10dp"
               android:listSelector="@android:color/transparent"
               />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="50dp"/>
       </LinearLayout>
    </ScrollView>

</LinearLayout>